<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns="uri:oozie:workflow:0.5" name="${merger_job_wf_name}">

    <!-- start -->
    <start to="spark_submit"/>

    <!-- spark-submit -->
    <action name="spark_submit">
        <spark xmlns="uri:oozie:spark-action:0.2">

            <master>${spark_master}</master>
            <mode>${spark_deploy_mode}</mode>
            <name>${merger_job_spark_app_name}</name>
            <class>${merger_job_spark_main_class}</class>
            <jar>${application_lib_path}/${merger_job_spark_jar_name}</jar>
            <spark-opts>
                --queue ${spark_queue}
                --files ${application_lib_path}/${spark_application_properties_file},${application_lib_path}/${spark_application_log4j_file_name}
                --jars ${application_lib_path}/${impala_jdbc_driver_jar_name}
                --driver-java-options "-Dlog4j.configurationFile=${spark_application_log4j_file_name}"
                --driver-class-path /etc/hive/conf
                --driver-memory ${merger_job_spark_driver_memory}
                --executor-memory ${merger_job_spark_executor_memory}
            </spark-opts>

            <arg>-p</arg>
            <arg>${spark_application_properties_file}</arg>
            <arg>-s</arg>
            <arg>${merger_job_arg_file_size_threshold_mb}</arg>

        </spark>
        <ok to="end"/>
        <error to="kill"/>
    </action>

    <kill name="kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

    <end name="end"/>

</workflow-app>